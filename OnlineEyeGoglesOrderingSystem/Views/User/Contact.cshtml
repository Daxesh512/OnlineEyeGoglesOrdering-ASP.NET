@model OnlineEyeGoglesOrderingSystem.Models.ContactTbl
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}


<center>
    <div id="contact" class="contact">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <form class="main_form">
                        @using (Html.BeginForm("Contact", "User", FormMethod.Post))
                        {
                        <div class="row">
                            <div class="col-md-12 ">
                                <h3>Contact Us</h3>
                            </div>
                            <div class="col-md-12 ">
                                <label>Name</label>
                                <a>@Html.TextBoxFor(m => m.name)</a>

                            </div>

                            <div class="col-md-12">
                                <label>Email Id</label>
                                <a>@Html.TextBoxFor(m => m.email)</a>

                            </div>
                            <div class="col-md-12">
                                <label>Subject</label>
                                <a>@Html.TextBoxFor(m => m.subject)</a>

                            </div>
                            <div class="col-md-12">
                                <lable>Message</lable>
                                <a>@Html.TextAreaFor(m => m.message)</a>

                            </div>
                            <div class="col-md-12">
                                <input id="btnSend" value="Send" class="btn btn-danger" name="Send"/>
                            </div>
                        </div>
                        }
                    </form>
                </div>
            </div>
        </div>
        <div class="container-fluid">

        </div>
    </div>
    </div>
</center>



